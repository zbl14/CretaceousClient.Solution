@{
    ViewData["Title"] = "Home Page";
}

<h1>New Animal:</h1>

<form action="/animals" method="post">
  <label for="name">Animal's Name</label>
  <input id="name" name="name" type="text">
  <label for="species">Animal's Species</label>
  <input id="species" name="species" type="text">
  <label for="age">Animal's Age</label>
  <input id="age" name="age" type="number">
  <label for="gender">Animal's Gender</label>
  <input id="gender" name="gender" type="text">
  <button type="submit">Go!</button>
</form>

<h1>All Animals:</h1>

<ol>
@foreach (Animal animal in Model)
{
    <ul>
        <li>ID: @animal.AnimalId</li>
        <li>Name: @animal.Name</li>
        <li>Species: @animal.Species</li>
        <li>Age: @animal.Age</li>
        <li>Gender: @animal.Gender</li>
    </ul>
    <a href="/Animals/Details/@(animal.AnimalId)"><p>View Details</p></a>
    <br>
}
</ol>